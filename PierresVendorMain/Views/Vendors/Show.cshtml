@{
  Layout = "_Layout";
}

@using PierresVendorMain.Models;

<h2>Vendor Name: @Model["vendor"].Name</h2>
<h2>Vendor Description: @Model["vendor"].Description</h2>
<h2>Vendor Orders: </h2>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Create a New Order</a></p>
<p><a href='/vendors'>Return to Vendor List</a></p>
<p><a href='/'>Return to Home Page</a></p>