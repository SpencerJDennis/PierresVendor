@{
  Layout = "_Layout";
}

<h1>Add a new order from @Model.Name</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type ="hidden" value="@Model.Id">
  <label for="newOrderTitle">Order Title</label>
  <input id="newOrderTitle" name="newOrderTitle" type="text">
  <label for="newOrderDate">Order Date</label>
  <input id="newOrderDate" name="newOrderDate" type="text">
  <label for="newOrderDescription">Order Description</label>
  <input id="newOrderDescription" name="newOrderDescription" type="text">
  <label for="newOrderPrice">Order Price</label>
  <input id="newOrderPrice" name="newOrderPrice" type="number">
  <button type='submit'>Add Order</button>
</form>